<div class="post-header">
  <a class="post-header-title font-weight-medium" href="<%-url_for(page.path)%>"><%=page.title%></a>
  <div class="post-header-meta">
    <span>
      <span class="iconfont icon-calendar"></span>
      <%=__('post.posted')%>:&nbsp;<%=date(page.date)%>
    </span>
    <span>
      <span class="iconfont icon-calendar-check"></span>
      <%=__('post.edited')%>:&nbsp;<%=date(page.updated)%>
    </span>
    <span>
      <span class="iconfont icon-folder"></span>
      <%=__('post.in')%>:&nbsp;<%- list_categories(page.categories, {show_count: false, style: 'none', separator: ' > '}) %>
    </span>
    <%if(theme.busuanzi.site){%>
      <span>
        <span class="iconfont icon-eye"></span>
        <%=__('post.views')%>:&nbsp;
        <span id="busuanzi_container_page_pv"><span id="busuanzi_value_page_pv"></span></span>
      </span>
    <%}%>
  </div>
</div>
