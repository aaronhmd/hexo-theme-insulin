@import "highlight"
@import "page"

$background-color=rgb(245,245,245)

#app{
  //background: $background-color
}

#page{
  margin: 0 auto;
  width: 100%;
  max-width: 1200px;
}

/*侧边栏*/
#sidebar {
  position: fixed;
  width:160px;   
  //height: 850px 
  //background: $background-color
  & .v-avatar{
      margin:15px 32px;
  }
  & .v-list{
     //background: $background-color
  }
}
#main-menu{
  font-size: 18px
  opacity: .59
}
#sub-menu{  
  font-size: 16px
  opacity: .75
  & .v-badge{
    margin: auto;
    width: 100%;
  }
  & .v-list-item__content{
    text-align:right;
  }
}


/*标题栏*/
#site-title{
  font-size: 36px
  opacity: .96
  & a {
    text-decoration: none;
    &:visited, &:link {
      color: unset;
    }
  }    
}
#site-description{
  font-size: 24px
  color: #444
  opacity: .89
}

/*底部导航*/
#pagination{
  margin-top: 20px
}

/*页脚*/
#footer{
  //bottom: 100px;
  position: relative;
}

/*首页*/
.index-article-content{
  margin: 15px 0 5px 0;
}
.index-card{
  padding: 10px 30px;
  & .index-article{
    padding: 10px 0;
  }
}
.index-article-header{
  & a{
    text-decoration: none;
    &:visited, &:link {
      color: unset;
    }
  }
  & .index-article-header-title{
    font-size: 28px;
    line-height: 42px;
    opacity: .96;
  }
  & .index-article-header-category{
    font-size: 20px;
    line-height: 30px;
    opacity: .59;
  }
  & .index-article-header-date{
    font-size: 18px;
    line-height: 27px;
    opacity: .75;
  }
  & .index-article-header-tag{
    opacity: .75;
    & .index-article-header-tag-content{
      padding: 0 5px;
      color: #ffffff
      font-size: 18px;
      line-height: 27px;
    }
    & .v-icon{
      color: #ffffff
      font-size: 16px;
      line-height: 24px;
    }
  }
}
.index-article-readmore{
  padding-bottom: 15px
  text-align:center;
  & .v-btn__content{
    font-weight: 700
    font-size: 18px
    line-height: 27px;
    opacity: .75;
  }
}

/*文章页*/
.post-header{
  text-align:center;
  position: relative;
  padding: 40px 30px 0px 30px;
  .post-img &{
    padding: 24px;
  }
  & .post-header-title {
    text-decoration: none;
    display: block;
    font-size: 28px;
    line-height: 42px;
    opacity: .96;
    &:visited, &:link {
      color: unset
    }
  }
  .post-header-meta{
    display: block;
    font-size: 14px;
    line-height: 18px;
    opacity: .75;
    margin: 5px 0
    &>span+span::before{
      content: "|";
      margin: 0 0.5em;
    }
    & .v-icon{
      font-size: 18px
      line-height: 18px;
    }
    & a:visited, & a:link {
      color: unset
    }
  }
}
.post-content{
  padding: 20px 30px
}
.post-nav {
  padding: 5px 0
  line-height: 21px
  & .v-icon{
    font-size: 21px
  }
}